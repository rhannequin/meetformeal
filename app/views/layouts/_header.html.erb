<div class="header clearfix">
  <nav>
    <ul class="nav nav-pills pull-right">
      <li class="<%= active_class root_path %>">
        <%= link_to t(:'layouts.navbar.home'), root_path %>
      </li>
      <%- if user_signed_in? %>
        <li role="presentation" class="dropdown">
          <a class="dropdown-toggle" data-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">
            <%= current_user.name %> <span class="caret"></span>
          </a>
          <ul class="dropdown-menu">
            <li><%= link_to t(:'layouts.navbar.account.settings'), edit_user_registration_path %></li>
          </ul>
        </li>
        <%- if current_user.has_role? :admin %>
          <li role="presentation" class="dropdown">
            <a class="dropdown-toggle" data-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">
              <%= t(:'layouts.navbar.admin.name') %> <span class="caret"></span>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to t(:'layouts.navbar.admin.users'), admin_users_path %></li>
            </ul>
          </li>
        <% end -%>
        <li>
          <%= link_to t(:'devise.sessions.destroy.sign_out'), destroy_user_session_path, method: :delete %>
        </li>
      <% else -%>
        <li>
          <%= link_to t(:'devise.sessions.new.sign_in'), new_session_path(User) %>
        </li>
        <li>
          <%= link_to t(:'devise.registrations.new.sign_up'), new_registration_path(User) %>
        </li>
      <% end -%>
    </ul>
  </nav>
  <h3 class="text-muted"><%= t :'layouts.application_name' %></h3>
</div>
